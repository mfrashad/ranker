
<% if @scores && current_user.admin? %>
<div class="card m-3">
  <!-- Card content -->
  <div class="card-body">

    <!-- Title -->
    <h4 class="card-title">Your Evaluation</h4>
    <!-- Text -->
    <% @scores.each do |score| %>
      <p class="card-text">
        <%= score.name %>
        
        <span class="float-right">
          <%= score.value %>
          <i class="fas fa-star"></i>
          <% if score.evaluator == current_user %>
            <%= link_to(score, method: :delete, data: { confirm: 'Are you sure?' }) do %>
              <i class="fas fa-trash"></i>
            <% end %>
          <% end %>
        </span>
      </p>
      
    <% end%>
    <% unless @scores.empty? %>
    <hr>
    <p class="card-text">
      Average Score: 
      <span class="float-right">
        <%= sprintf('%.2f', @average_score) %>
        <i class="fas fa-star mr-3"></i>
      </span>
    </p>
    <% end %>
    <!-- Button -->
    <%= render 'scores/form', score: Score.new %>

  </div>

</div>
<% end %>